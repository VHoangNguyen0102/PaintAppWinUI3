<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PaintApp.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PaintApp.Views"
    xmlns:models="using:PaintApp.Models"
    xmlns:viewmodels="using:PaintApp.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,32">
            <TextBlock
                Text="Welcome to Paint App"
                Style="{StaticResource TitleLargeTextBlockStyle}"/>
            <TextBlock
                Text="Select your profile and start creating amazing artwork"
                Style="{StaticResource BodyTextBlockStyle}"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <Grid Grid.Row="1" MaxWidth="900" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="32"
                Margin="0,0,0,24">
                <Border.Shadow>
                    <ThemeShadow />
                </Border.Shadow>
                
                <StackPanel Spacing="24">
                    <TextBlock
                        Text="Manage Your Profiles"
                        Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <!-- Profile Selection -->
                    <ComboBox
                        x:Name="ProfileComboBox"
                        Header="Select Profile"
                        PlaceholderText="Choose a profile to continue"
                        ItemsSource="{x:Bind ViewModel.Profiles, Mode=OneWay}"
                        SelectedItem="{x:Bind ViewModel.SelectedProfile, Mode=TwoWay}"
                        HorizontalAlignment="Stretch"
                        MinWidth="300">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="models:Profile">
                                <StackPanel Orientation="Horizontal" Spacing="12" Padding="8">
                                    <PersonPicture
                                        Width="32"
                                        Height="32"
                                        DisplayName="{x:Bind Name}"/>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock 
                                            Text="{x:Bind Name}"
                                            Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock 
                                            Text="{x:Bind Theme}" 
                                            Style="{StaticResource CaptionTextBlockStyle}" 
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Profile Management Buttons -->
                    <Grid ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button
                            Grid.Column="0"
                            Command="{x:Bind ViewModel.CreateProfileCommand}"
                            HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE710;" FontSize="16"/>
                                <TextBlock Text="New"/>
                            </StackPanel>
                        </Button>

                        <Button
                            Grid.Column="1"
                            Command="{x:Bind ViewModel.EditProfileCommand}"
                            HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE70F;" FontSize="16"/>
                                <TextBlock Text="Edit"/>
                            </StackPanel>
                        </Button>

                        <Button
                            Grid.Column="2"
                            Command="{x:Bind ViewModel.DeleteProfileCommand}"
                            HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                                <TextBlock Text="Delete"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- Loading Indicator -->
                    <ProgressRing 
                        IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                        Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                        HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border
                Grid.Row="1"
                Background="{ThemeResource AccentFillColorDefaultBrush}"
                CornerRadius="8"
                Padding="32">
                <Border.Shadow>
                    <ThemeShadow />
                </Border.Shadow>
                
                <StackPanel Spacing="16" HorizontalAlignment="Center">
                    <FontIcon Glyph="&#xE70F;" FontSize="48" Foreground="White"/>
                    <TextBlock
                        Text="Ready to Create?"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        Foreground="White"
                        TextAlignment="Center"/>
                    <Button
                        Command="{x:Bind ViewModel.StartDrawingCommand}"
                        HorizontalAlignment="Stretch"
                        MinWidth="200"
                        Click="StartDrawingButton_Click">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE768;" FontSize="16"/>
                            <TextBlock Text="Start Drawing"/>
                        </StackPanel>
                    </Button>
                    <TextBlock
                        Text="Select a profile first to begin"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Foreground="White"
                        Opacity="0.8"
                        TextAlignment="Center"
                        Visibility="{x:Bind ViewModel.CanStartDrawing, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
