<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PaintApp.Views.ManagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PaintApp.Views"
    xmlns:models="using:PaintApp.Models"
    xmlns:converters="using:PaintApp.Converters"
    xmlns:viewmodels="using:PaintApp.ViewModels"
    xmlns:controls="using:PaintApp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:BoolToVisibilityInverseConverter x:Key="BoolToVisibilityInverseConverter"/>
        <converters:IntToVisibilityInverseConverter x:Key="IntToVisibilityInverseConverter"/>
    </Page.Resources>

    <Grid Padding="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,16">
            <TextBlock
                Text="Management Center"
                Style="{StaticResource TitleLargeTextBlockStyle}"/>
            <TextBlock
                Text="Manage canvases and templates"
                Style="{StaticResource BodyTextBlockStyle}"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <BreadcrumbBar Grid.Row="1" Margin="0,0,0,24">
            <BreadcrumbBar.ItemsSource>
                <x:String>Management</x:String>
            </BreadcrumbBar.ItemsSource>
        </BreadcrumbBar>

        <TabView
            Grid.Row="2"
            SelectedIndex="{x:Bind ViewModel.SelectedTabIndex, Mode=TwoWay}"
            TabWidthMode="Equal">
            
            <TabView.TabItems>
                <TabViewItem Header="Dashboard">
                    <TabViewItem.IconSource>
                        <SymbolIconSource Symbol="Home"/>
                    </TabViewItem.IconSource>
                    <Grid Padding="24">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Profile Info Card -->
                        <Border
                            Grid.Row="0"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="20"
                            Margin="0,0,0,24">
                            <Border.Shadow>
                                <ThemeShadow />
                            </Border.Shadow>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Profile Avatar -->
                                <PersonPicture
                                    Grid.Column="0"
                                    Width="80"
                                    Height="80"
                                    Margin="0,0,20,0"/>

                                <!-- Profile Details -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="8">
                                    <TextBlock
                                        Text="Current Profile"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock
                                        Text="{x:Bind ViewModel.SelectedProfile.Name, Mode=OneWay, FallbackValue='No Profile Selected'}"
                                        Style="{StaticResource TitleTextBlockStyle}"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Default Canvas Size -->
                                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" Margin="0,0,24,0">
                                            <FontIcon Glyph="&#xE8B7;" FontSize="16" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                            <TextBlock Style="{StaticResource CaptionTextBlockStyle}">
                                                <Run Text="Canvas: "/>
                                                <Run Text="{x:Bind ViewModel.SelectedProfile.DefaultCanvasWidth, Mode=OneWay}"/>
                                                <Run Text="×"/>
                                                <Run Text="{x:Bind ViewModel.SelectedProfile.DefaultCanvasHeight, Mode=OneWay}"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <!-- Theme -->
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" Margin="0,0,24,0">
                                            <FontIcon Glyph="&#xE771;" FontSize="16" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                            <TextBlock Style="{StaticResource CaptionTextBlockStyle}">
                                                <Run Text="Theme: "/>
                                                <Run Text="{x:Bind ViewModel.SelectedProfile.Theme, Mode=OneWay, FallbackValue='Default'}"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <!-- Created Date -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE787;" FontSize="16" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                            <TextBlock Style="{StaticResource CaptionTextBlockStyle}">
                                                <Run Text="Created: "/>
                                                <Run Text="{x:Bind ViewModel.SelectedProfile.CreatedAt, Mode=OneWay}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Dashboard Stats -->
                        <Grid Grid.Row="1" Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border
                                Grid.Column="0"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="24"
                                Margin="0,0,8,0">
                                <Border.Shadow>
                                    <ThemeShadow />
                                </Border.Shadow>
                                <StackPanel Spacing="8">
                                    <FontIcon Glyph="&#xE716;" FontSize="32" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                    <TextBlock Text="Total Profiles" Style="{StaticResource BodyTextBlockStyle}"/>
                                    <TextBlock Text="{x:Bind ViewModel.TotalProfiles, Mode=OneWay}" Style="{StaticResource TitleLargeTextBlockStyle}"/>
                                </StackPanel>
                            </Border>

                            <Border
                                Grid.Column="1"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="24"
                                Margin="4,0,4,0">
                                <Border.Shadow>
                                    <ThemeShadow />
                                </Border.Shadow>
                                <StackPanel Spacing="8">
                                    <FontIcon Glyph="&#xE8B7;" FontSize="32" Foreground="{ThemeResource SystemFillColorAttentionBrush}"/>
                                    <TextBlock Text="Total Canvases" Style="{StaticResource BodyTextBlockStyle}"/>
                                    <TextBlock Text="{x:Bind ViewModel.TotalCanvases, Mode=OneWay}" Style="{StaticResource TitleLargeTextBlockStyle}"/>
                                </StackPanel>
                            </Border>

                            <Border
                                Grid.Column="2"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="24"
                                Margin="8,0,0,0">
                                <Border.Shadow>
                                    <ThemeShadow />
                                </Border.Shadow>
                                <StackPanel Spacing="8">
                                    <FontIcon Glyph="&#xE8F1;" FontSize="32" Foreground="{ThemeResource SystemFillColorCautionBrush}"/>
                                    <TextBlock Text="Total Templates" Style="{StaticResource BodyTextBlockStyle}"/>
                                    <TextBlock Text="{x:Bind ViewModel.TotalTemplates, Mode=OneWay}" Style="{StaticResource TitleLargeTextBlockStyle}"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                            <StackPanel Spacing="16">
                                <TextBlock Text="Recent Activity" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                <ListView
                                    ItemsSource="{x:Bind ViewModel.Profiles, Mode=OneWay}"
                                    SelectionMode="None">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border
                                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                                CornerRadius="4"
                                                Padding="16"
                                                Margin="0,4,0,4">
                                                <StackPanel Orientation="Horizontal" Spacing="12">
                                                    <PersonPicture Width="40" Height="40"/>
                                                    <StackPanel VerticalAlignment="Center">
                                                        <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                                        <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </TabViewItem>

                <TabViewItem Header="Canvases">
                    <TabViewItem.IconSource>
                        <FontIconSource Glyph="&#xE8B7;"/>
                    </TabViewItem.IconSource>
                    <Grid Padding="24">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header with Profile Selector and Refresh -->
                        <Grid Grid.Row="0" Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                                <TextBlock Text="Profile:" Style="{StaticResource BodyStrongTextBlockStyle}" VerticalAlignment="Center"/>
                                <ComboBox
                                    ItemsSource="{x:Bind ViewModel.Profiles, Mode=OneWay}"
                                    SelectedItem="{x:Bind ViewModel.SelectedProfile, Mode=TwoWay}"
                                    DisplayMemberPath="Name"
                                    MinWidth="200"/>
                            </StackPanel>

                            <Button
                                Grid.Column="2"
                                Command="{x:Bind ViewModel.RefreshCanvasesCommand}"
                                Style="{StaticResource AccentButtonStyle}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE72C;" FontSize="16"/>
                                    <TextBlock Text="Refresh"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Canvas Grid -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel Spacing="16">
                                <ProgressRing 
                                    IsActive="{x:Bind ViewModel.IsLoadingCanvases, Mode=OneWay}"
                                    Visibility="{x:Bind ViewModel.IsLoadingCanvases, Mode=OneWay}"
                                    HorizontalAlignment="Center"
                                    Width="50"
                                    Height="50"/>

                                <GridView
                                    ItemsSource="{x:Bind ViewModel.Canvases, Mode=OneWay}"
                                    SelectionMode="None"
                                    IsItemClickEnabled="False"
                                    Padding="0"
                                    Visibility="{x:Bind ViewModel.IsLoadingCanvases, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                                    <GridView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <ItemsWrapGrid Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </GridView.ItemsPanel>
                                    <GridView.ItemTemplate>
                                        <DataTemplate x:DataType="models:Canvas">
                                            <Border
                                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                BorderThickness="1"
                                                CornerRadius="8"
                                                Width="280"
                                                Margin="8"
                                                Padding="16"
                                                DoubleTapped="CanvasCard_DoubleTapped">
                                                <Border.Shadow>
                                                    <ThemeShadow />
                                                </Border.Shadow>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- Canvas Preview -->
                                                    <Border
                                                        Grid.Row="0"
                                                        Background="White"
                                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                        BorderThickness="1"
                                                        CornerRadius="4"
                                                        Height="120"
                                                        Margin="0,0,0,12">
                                                        <Grid>
                                                            <FontIcon 
                                                                Glyph="&#xE8B7;" 
                                                                FontSize="48"
                                                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>

                                                    <!-- Canvas Info -->
                                                    <StackPanel Grid.Row="1" Spacing="6" Margin="0,0,0,12" Height="80">
                                                        <TextBlock 
                                                            Text="{x:Bind Name}" 
                                                            Style="{StaticResource BodyStrongTextBlockStyle}"
                                                            TextTrimming="CharacterEllipsis"
                                                            MaxLines="1"/>
                                                        <TextBlock 
                                                            Style="{StaticResource CaptionTextBlockStyle}"
                                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                            <Run Text="Size: "/>
                                                            <Run Text="{x:Bind Width}"/>
                                                            <Run Text=" × "/>
                                                            <Run Text="{x:Bind Height}"/>
                                                            <Run Text=" px"/>
                                                        </TextBlock>
                                                        <TextBlock 
                                                            Style="{StaticResource CaptionTextBlockStyle}"
                                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                            TextTrimming="CharacterEllipsis">
                                                            <Run Text="Created: "/>
                                                            <Run Text="{x:Bind CreatedAt}"/>
                                                        </TextBlock>
                                                    </StackPanel>

                                                    <!-- Action Buttons -->
                                                    <Grid Grid.Row="2" Height="40">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Button
                                                            Grid.Column="0"
                                                            HorizontalAlignment="Stretch"
                                                            VerticalAlignment="Stretch"
                                                            Margin="0,0,4,0"
                                                            Click="OpenCanvasButton_Click"
                                                            Tag="{x:Bind}"
                                                            Style="{StaticResource AccentButtonStyle}">
                                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                                <FontIcon Glyph="&#xE8A7;" FontSize="16"/>
                                                                <TextBlock Text="Open"/>
                                                            </StackPanel>
                                                        </Button>

                                                        <Button
                                                            Grid.Column="1"
                                                            Width="40"
                                                            Height="40"
                                                            Padding="0"
                                                            Margin="4,0,0,0"
                                                            Click="DeleteCanvasButton_Click"
                                                            Tag="{x:Bind}"
                                                            ToolTipService.ToolTip="Delete canvas"
                                                            CornerRadius="4">
                                                            <Button.Resources>
                                                                <SolidColorBrush x:Key="ButtonBackground" Color="#DC3545"/>
                                                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#BB2D3B"/>
                                                                <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#A02834"/>
                                                                <SolidColorBrush x:Key="ButtonForeground" Color="White"/>
                                                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White"/>
                                                                <SolidColorBrush x:Key="ButtonForegroundPressed" Color="White"/>
                                                            </Button.Resources>
                                                            <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                                                        </Button>
                                                    </Grid>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </GridView.ItemTemplate>
                                </GridView>

                                <!-- Empty State -->
                                <StackPanel 
                                    Spacing="16" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center"
                                    Margin="0,40,0,0"
                                    Visibility="{x:Bind ViewModel.Canvases.Count, Mode=OneWay, Converter={StaticResource IntToVisibilityInverseConverter}}">
                                    <FontIcon Glyph="&#xE8B7;" FontSize="64" Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                    <TextBlock
                                        Text="No canvases found"
                                        Style="{StaticResource TitleTextBlockStyle}"
                                        TextAlignment="Center"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock
                                        Text="Create a new canvas from the Draw page"
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        TextAlignment="Center"
                                        Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </TabViewItem>

                <TabViewItem Header="Templates">
                    <TabViewItem.IconSource>
                        <FontIconSource Glyph="&#xE8F1;"/>
                    </TabViewItem.IconSource>
                    <Grid Padding="24">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header with Refresh and Cleanup -->
                        <Grid Grid.Row="0" Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                                <FontIcon Glyph="&#xE8F1;" FontSize="24" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                <StackPanel>
                                    <TextBlock Text="Template Library" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                    <TextBlock 
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                        <Run Text="Total: "/>
                                        <Run Text="{x:Bind ViewModel.TemplateShapes.Count, Mode=OneWay}"/>
                                        <Run Text=" templates"/>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>

                            <Button
                                Grid.Column="2"
                                Command="{x:Bind ViewModel.RefreshTemplatesCommand}"
                                Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE72C;" FontSize="16"/>
                                    <TextBlock Text="Refresh"/>
                                </StackPanel>
                            </Button>

                            <Button
                                Grid.Column="3"
                                Command="{x:Bind ViewModel.CleanupDuplicateTemplatesCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE75C;" FontSize="16"/>
                                    <TextBlock Text="Cleanup Duplicates"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Templates Grid -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel Spacing="16">
                                <ProgressRing 
                                    IsActive="{x:Bind ViewModel.IsLoadingTemplates, Mode=OneWay}"
                                    Visibility="{x:Bind ViewModel.IsLoadingTemplates, Mode=OneWay}"
                                    HorizontalAlignment="Center"
                                    Width="50"
                                    Height="50"/>

                                <GridView
                                    ItemsSource="{x:Bind ViewModel.TemplateShapes, Mode=OneWay}"
                                    SelectionMode="None"
                                    IsItemClickEnabled="False"
                                    Padding="0"
                                    Visibility="{x:Bind ViewModel.IsLoadingTemplates, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                                    <GridView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <ItemsWrapGrid Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </GridView.ItemsPanel>
                                    <GridView.ItemTemplate>
                                        <DataTemplate x:DataType="models:Shape">
                                            <Border
                                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                BorderThickness="1"
                                                CornerRadius="8"
                                                Width="240"
                                                Margin="8"
                                                Padding="16">
                                                <Border.Shadow>
                                                    <ThemeShadow />
                                                </Border.Shadow>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- Template Preview -->
                                                    <Border
                                                        Grid.Row="0"
                                                        Background="White"
                                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                        BorderThickness="1"
                                                        CornerRadius="4"
                                                        Height="120"
                                                        Margin="0,0,0,12">
                                                        <controls:ShapeThumbnailControl
                                                            Shape="{x:Bind}"
                                                            Width="120"
                                                            Height="120"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                                    </Border>

                                                    <!-- Template Info -->
                                                    <StackPanel Grid.Row="1" Spacing="6" Margin="0,0,0,12">
                                                        <TextBlock 
                                                            Text="{x:Bind Type}" 
                                                            Style="{StaticResource BodyStrongTextBlockStyle}"
                                                            TextTrimming="CharacterEllipsis"
                                                            MaxLines="1"/>
                                                        <TextBlock 
                                                            Style="{StaticResource CaptionTextBlockStyle}"
                                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                            <Run Text="ID: "/>
                                                            <Run Text="{x:Bind Id}"/>
                                                        </TextBlock>
                                                        <TextBlock 
                                                            Style="{StaticResource CaptionTextBlockStyle}"
                                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                            <Run Text="Size: "/>
                                                            <Run Text="{x:Bind Width}"/>
                                                            <Run Text=" × "/>
                                                            <Run Text="{x:Bind Height}"/>
                                                        </TextBlock>
                                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                                            <FontIcon Glyph="&#xE76E;" FontSize="12" Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                                                            <TextBlock 
                                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                                Foreground="{ThemeResource SystemFillColorSuccessBrush}">
                                                                <Run Text="Used "/>
                                                                <Run Text="{x:Bind UsageCount}"/>
                                                                <Run Text=" times"/>
                                                            </TextBlock>
                                                        </StackPanel>
                                                        <TextBlock 
                                                            Style="{StaticResource CaptionTextBlockStyle}"
                                                            Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                            FontSize="10">
                                                            <Run Text="Created: "/>
                                                            <Run Text="{x:Bind CreatedAt}"/>
                                                        </TextBlock>
                                                    </StackPanel>

                                                    <!-- Action Button -->
                                                    <Button
                                                        Grid.Row="2"
                                                        HorizontalAlignment="Stretch"
                                                        Click="DeleteTemplateButton_Click"
                                                        Tag="{x:Bind}">
                                                        <Button.Resources>
                                                            <SolidColorBrush x:Key="ButtonBackground" Color="#DC3545"/>
                                                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#BB2D3B"/>
                                                            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#A02834"/>
                                                            <SolidColorBrush x:Key="ButtonForeground" Color="White"/>
                                                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White"/>
                                                            <SolidColorBrush x:Key="ButtonForegroundPressed" Color="White"/>
                                                        </Button.Resources>
                                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                                            <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                                                            <TextBlock Text="Delete Template"/>
                                                        </StackPanel>
                                                    </Button>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </GridView.ItemTemplate>
                                </GridView>

                                <!-- Empty State -->
                                <StackPanel 
                                    Spacing="16" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center"
                                    Margin="0,40,0,0"
                                    Visibility="{x:Bind ViewModel.TemplateShapes.Count, Mode=OneWay, Converter={StaticResource IntToVisibilityInverseConverter}}">
                                    <FontIcon Glyph="&#xE8F1;" FontSize="64" Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                    <TextBlock
                                        Text="No templates found"
                                        Style="{StaticResource TitleTextBlockStyle}"
                                        TextAlignment="Center"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock
                                        Text="Save shapes as templates from the Draw page"
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        TextAlignment="Center"
                                        Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </TabViewItem>
            </TabView.TabItems>
        </TabView>
    </Grid>
</Page>
