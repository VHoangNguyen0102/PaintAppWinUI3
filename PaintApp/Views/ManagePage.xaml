<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PaintApp.Views.ManagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PaintApp.Views"
    xmlns:models="using:PaintApp.Models"
    xmlns:converters="using:PaintApp.Converters"
    xmlns:viewmodels="using:PaintApp.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:BoolToVisibilityInverseConverter x:Key="BoolToVisibilityInverseConverter"/>
        <converters:IntToVisibilityInverseConverter x:Key="IntToVisibilityInverseConverter"/>
    </Page.Resources>

    <Grid Padding="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,16">
            <TextBlock
                Text="Management Center"
                Style="{StaticResource TitleLargeTextBlockStyle}"/>
            <TextBlock
                Text="Manage profiles, drawings, and templates"
                Style="{StaticResource BodyTextBlockStyle}"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <BreadcrumbBar Grid.Row="1" Margin="0,0,0,24">
            <BreadcrumbBar.ItemsSource>
                <x:String>Management</x:String>
            </BreadcrumbBar.ItemsSource>
        </BreadcrumbBar>

        <TabView
            Grid.Row="2"
            SelectedIndex="{x:Bind ViewModel.SelectedTabIndex, Mode=TwoWay}"
            TabWidthMode="Equal">
            
            <TabView.TabItems>
                <TabViewItem Header="Dashboard">
                    <TabViewItem.IconSource>
                        <SymbolIconSource Symbol="Home"/>
                    </TabViewItem.IconSource>
                    <Grid Padding="24">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border
                                Grid.Column="0"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="24"
                                Margin="0,0,8,0">
                                <Border.Shadow>
                                    <ThemeShadow />
                                </Border.Shadow>
                                <StackPanel Spacing="8">
                                    <FontIcon Glyph="&#xE716;" FontSize="32" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                    <TextBlock Text="Total Profiles" Style="{StaticResource BodyTextBlockStyle}"/>
                                    <TextBlock Text="{x:Bind ViewModel.TotalProfiles, Mode=OneWay}" Style="{StaticResource TitleLargeTextBlockStyle}"/>
                                </StackPanel>
                            </Border>

                            <Border
                                Grid.Column="1"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="24"
                                Margin="4,0,4,0">
                                <Border.Shadow>
                                    <ThemeShadow />
                                </Border.Shadow>
                                <StackPanel Spacing="8">
                                    <FontIcon Glyph="&#xE8B7;" FontSize="32" Foreground="{ThemeResource SystemFillColorAttentionBrush}"/>
                                    <TextBlock Text="Total Canvases" Style="{StaticResource BodyTextBlockStyle}"/>
                                    <TextBlock Text="{x:Bind ViewModel.TotalCanvases, Mode=OneWay}" Style="{StaticResource TitleLargeTextBlockStyle}"/>
                                </StackPanel>
                            </Border>

                            <Border
                                Grid.Column="2"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="24"
                                Margin="4,0,4,0">
                                <Border.Shadow>
                                    <ThemeShadow />
                                </Border.Shadow>
                                <StackPanel Spacing="8">
                                    <FontIcon Glyph="&#xE70F;" FontSize="32" Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                                    <TextBlock Text="Total Drawings" Style="{StaticResource BodyTextBlockStyle}"/>
                                    <TextBlock Text="{x:Bind ViewModel.TotalDrawings, Mode=OneWay}" Style="{StaticResource TitleLargeTextBlockStyle}"/>
                                </StackPanel>
                            </Border>

                            <Border
                                Grid.Column="3"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="24"
                                Margin="8,0,0,0">
                                <Border.Shadow>
                                    <ThemeShadow />
                                </Border.Shadow>
                                <StackPanel Spacing="8">
                                    <FontIcon Glyph="&#xE8F1;" FontSize="32" Foreground="{ThemeResource SystemFillColorCautionBrush}"/>
                                    <TextBlock Text="Total Templates" Style="{StaticResource BodyTextBlockStyle}"/>
                                    <TextBlock Text="{x:Bind ViewModel.TotalTemplates, Mode=OneWay}" Style="{StaticResource TitleLargeTextBlockStyle}"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel Spacing="16">
                                <TextBlock Text="Recent Activity" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                <ListView
                                    ItemsSource="{x:Bind ViewModel.Profiles, Mode=OneWay}"
                                    SelectionMode="None">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border
                                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                                CornerRadius="4"
                                                Padding="16"
                                                Margin="0,4,0,4">
                                                <StackPanel Orientation="Horizontal" Spacing="12">
                                                    <PersonPicture Width="40" Height="40"/>
                                                    <StackPanel VerticalAlignment="Center">
                                                        <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                                        <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </TabViewItem>

                <TabViewItem Header="Canvases">
                    <TabViewItem.IconSource>
                        <FontIconSource Glyph="&#xE8B7;"/>
                    </TabViewItem.IconSource>
                    <Grid Padding="24">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header with Profile Selector and Refresh -->
                        <Grid Grid.Row="0" Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                                <TextBlock Text="Profile:" Style="{StaticResource BodyStrongTextBlockStyle}" VerticalAlignment="Center"/>
                                <ComboBox
                                    ItemsSource="{x:Bind ViewModel.Profiles, Mode=OneWay}"
                                    SelectedItem="{x:Bind ViewModel.SelectedProfile, Mode=TwoWay}"
                                    DisplayMemberPath="Name"
                                    MinWidth="200"/>
                            </StackPanel>

                            <Button
                                Grid.Column="2"
                                Command="{x:Bind ViewModel.RefreshCanvasesCommand}"
                                Style="{StaticResource AccentButtonStyle}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE72C;" FontSize="16"/>
                                    <TextBlock Text="Refresh"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Canvas Grid -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel Spacing="16">
                                <ProgressRing 
                                    IsActive="{x:Bind ViewModel.IsLoadingCanvases, Mode=OneWay}"
                                    Visibility="{x:Bind ViewModel.IsLoadingCanvases, Mode=OneWay}"
                                    HorizontalAlignment="Center"
                                    Width="50"
                                    Height="50"/>

                                <GridView
                                    ItemsSource="{x:Bind ViewModel.Canvases, Mode=OneWay}"
                                    SelectionMode="None"
                                    IsItemClickEnabled="False"
                                    Padding="0"
                                    Visibility="{x:Bind ViewModel.IsLoadingCanvases, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                                    <GridView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <ItemsWrapGrid Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </GridView.ItemsPanel>
                                    <GridView.ItemTemplate>
                                        <DataTemplate x:DataType="models:Canvas">
                                            <Border
                                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                BorderThickness="1"
                                                CornerRadius="8"
                                                Width="280"
                                                Margin="8"
                                                Padding="16">
                                                <Border.Shadow>
                                                    <ThemeShadow />
                                                </Border.Shadow>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- Canvas Preview -->
                                                    <Border
                                                        Grid.Row="0"
                                                        Background="White"
                                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                        BorderThickness="1"
                                                        CornerRadius="4"
                                                        Height="120"
                                                        Margin="0,0,0,12">
                                                        <Grid>
                                                            <FontIcon 
                                                                Glyph="&#xE8B7;" 
                                                                FontSize="48"
                                                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>

                                                    <!-- Canvas Info -->
                                                    <StackPanel Grid.Row="1" Spacing="6" Margin="0,0,0,12" Height="80">
                                                        <TextBlock 
                                                            Text="{x:Bind Name}" 
                                                            Style="{StaticResource BodyStrongTextBlockStyle}"
                                                            TextTrimming="CharacterEllipsis"
                                                            MaxLines="1"/>
                                                        <TextBlock 
                                                            Style="{StaticResource CaptionTextBlockStyle}"
                                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                            <Run Text="Size: "/>
                                                            <Run Text="{x:Bind Width}"/>
                                                            <Run Text=" Ã— "/>
                                                            <Run Text="{x:Bind Height}"/>
                                                            <Run Text=" px"/>
                                                        </TextBlock>
                                                        <TextBlock 
                                                            Style="{StaticResource CaptionTextBlockStyle}"
                                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                            TextTrimming="CharacterEllipsis">
                                                            <Run Text="Created: "/>
                                                            <Run Text="{x:Bind CreatedAt}"/>
                                                        </TextBlock>
                                                    </StackPanel>

                                                    <!-- Action Buttons -->
                                                    <Grid Grid.Row="2" Height="40">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Button
                                                            Grid.Column="0"
                                                            HorizontalAlignment="Stretch"
                                                            VerticalAlignment="Stretch"
                                                            Margin="0,0,4,0"
                                                            Click="OpenCanvasButton_Click"
                                                            Tag="{x:Bind}"
                                                            Style="{StaticResource AccentButtonStyle}">
                                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                                <FontIcon Glyph="&#xE8A7;" FontSize="16"/>
                                                                <TextBlock Text="Open"/>
                                                            </StackPanel>
                                                        </Button>

                                                        <Button
                                                            Grid.Column="1"
                                                            Width="40"
                                                            Height="40"
                                                            Padding="0"
                                                            Margin="4,0,0,0"
                                                            Click="DeleteCanvasButton_Click"
                                                            Tag="{x:Bind}"
                                                            ToolTipService.ToolTip="Delete canvas"
                                                            CornerRadius="4">
                                                            <Button.Resources>
                                                                <SolidColorBrush x:Key="ButtonBackground" Color="#DC3545"/>
                                                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#BB2D3B"/>
                                                                <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#A02834"/>
                                                                <SolidColorBrush x:Key="ButtonForeground" Color="White"/>
                                                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White"/>
                                                                <SolidColorBrush x:Key="ButtonForegroundPressed" Color="White"/>
                                                            </Button.Resources>
                                                            <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                                                        </Button>
                                                    </Grid>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </GridView.ItemTemplate>
                                </GridView>

                                <!-- Empty State -->
                                <StackPanel 
                                    Spacing="16" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center"
                                    Margin="0,40,0,0"
                                    Visibility="{x:Bind ViewModel.Canvases.Count, Mode=OneWay, Converter={StaticResource IntToVisibilityInverseConverter}}">
                                    <FontIcon Glyph="&#xE8B7;" FontSize="64" Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                    <TextBlock
                                        Text="No canvases found"
                                        Style="{StaticResource TitleTextBlockStyle}"
                                        TextAlignment="Center"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock
                                        Text="Create a new canvas from the Draw page"
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        TextAlignment="Center"
                                        Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </TabViewItem>

                <TabViewItem Header="Drawings">
                    <TabViewItem.IconSource>
                        <SymbolIconSource Symbol="Pictures"/>
                    </TabViewItem.IconSource>
                    <Grid Padding="24">
                        <StackPanel Spacing="16" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <FontIcon Glyph="&#xE70F;" FontSize="64" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock
                                Text="Manage Drawings"
                                Style="{StaticResource TitleTextBlockStyle}"
                                TextAlignment="Center"/>
                            <TextBlock
                                Text="Drawing management features will appear here"
                                Style="{StaticResource BodyTextBlockStyle}"
                                TextAlignment="Center"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <Button Style="{StaticResource AccentButtonStyle}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE710;" FontSize="16"/>
                                    <TextBlock Text="Add New Drawing"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </TabViewItem>

                <TabViewItem Header="Templates">
                    <TabViewItem.IconSource>
                        <SymbolIconSource Symbol="Document"/>
                    </TabViewItem.IconSource>
                    <Grid Padding="24">
                        <StackPanel Spacing="16" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <FontIcon Glyph="&#xE8F1;" FontSize="64" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock
                                Text="Manage Templates"
                                Style="{StaticResource TitleTextBlockStyle}"
                                TextAlignment="Center"/>
                            <TextBlock
                                Text="Template management features will appear here"
                                Style="{StaticResource BodyTextBlockStyle}"
                                TextAlignment="Center"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <Button Style="{StaticResource AccentButtonStyle}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE710;" FontSize="16"/>
                                    <TextBlock Text="Add New Template"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </TabViewItem>
            </TabView.TabItems>
        </TabView>
    </Grid>
</Page>
