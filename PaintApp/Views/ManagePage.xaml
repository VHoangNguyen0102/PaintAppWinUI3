<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PaintApp.Views.ManagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PaintApp.Views"
    xmlns:models="using:PaintApp.Models"
    xmlns:converters="using:PaintApp.Converters"
    xmlns:viewmodels="using:PaintApp.ViewModels"
    xmlns:controls="using:PaintApp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:BoolToVisibilityInverseConverter x:Key="BoolToVisibilityInverseConverter"/>
        <converters:IntToVisibilityInverseConverter x:Key="IntToVisibilityInverseConverter"/>
        <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter"/>
    </Page.Resources>

    <Grid Padding="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,16">
            <TextBlock
                Text="Management Center"
                Style="{StaticResource TitleLargeTextBlockStyle}"/>
            <TextBlock
                Text="Manage canvases and templates"
                Style="{StaticResource BodyTextBlockStyle}"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <BreadcrumbBar Grid.Row="1" Margin="0,0,0,24">
            <BreadcrumbBar.ItemsSource>
                <x:String>Management</x:String>
            </BreadcrumbBar.ItemsSource>
        </BreadcrumbBar>

        <TabView
            Grid.Row="2"
            SelectedIndex="{x:Bind ViewModel.SelectedTabIndex, Mode=TwoWay}"
            TabWidthMode="Equal">
            
            <TabView.TabItems>
                <TabViewItem Header="Dashboard">
                    <TabViewItem.IconSource>
                        <SymbolIconSource Symbol="Home"/>
                    </TabViewItem.IconSource>
                    <ScrollViewer Padding="24" VerticalScrollBarVisibility="Auto">
                        <StackPanel Spacing="24">
                            <!-- Profile Info Card -->
                            <Border
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="20">
                                <Border.Shadow>
                                    <ThemeShadow />
                                </Border.Shadow>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Profile Avatar -->
                                    <PersonPicture
                                        Grid.Column="0"
                                        Width="80"
                                        Height="80"
                                        Margin="0,0,20,0"/>

                                    <!-- Profile Details -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="8">
                                        <TextBlock
                                            Text="Current Profile"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock
                                            Text="{x:Bind ViewModel.SelectedProfile.Name, Mode=OneWay, FallbackValue='No Profile Selected'}"
                                            Style="{StaticResource TitleTextBlockStyle}"/>
                                        
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Default Canvas Size -->
                                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" Margin="0,0,24,0">
                                                <FontIcon Glyph="&#xE8B7;" FontSize="16" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                                <TextBlock Style="{StaticResource CaptionTextBlockStyle}">
                                                    <Run Text="Canvas: "/>
                                                    <Run Text="{x:Bind ViewModel.SelectedProfile.DefaultCanvasWidth, Mode=OneWay}"/>
                                                    <Run Text="Ã—"/>
                                                    <Run Text="{x:Bind ViewModel.SelectedProfile.DefaultCanvasHeight, Mode=OneWay}"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <!-- Theme -->
                                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" Margin="0,0,24,0">
                                                <FontIcon Glyph="&#xE771;" FontSize="16" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                                <TextBlock Style="{StaticResource CaptionTextBlockStyle}">
                                                    <Run Text="Theme: "/>
                                                    <Run Text="{x:Bind ViewModel.SelectedProfile.Theme, Mode=OneWay, FallbackValue='Default'}"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <!-- Created Date -->
                                            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                                                <FontIcon Glyph="&#xE787;" FontSize="16" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                                <TextBlock Style="{StaticResource CaptionTextBlockStyle}">
                                                    <Run Text="Created: "/>
                                                    <Run Text="{x:Bind ViewModel.SelectedProfile.CreatedAt, Mode=OneWay}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>

                                    <!-- Refresh Button -->
                                    <Button
                                        Grid.Column="2"
                                        Command="{x:Bind ViewModel.RefreshStatisticsCommand}"
                                        VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE72C;" FontSize="16"/>
                                            <TextBlock Text="Refresh"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </Border>

                            <!-- Loading Indicator -->
                            <ProgressRing 
                                IsActive="{x:Bind ViewModel.IsLoadingStatistics, Mode=OneWay}"
                                Visibility="{x:Bind ViewModel.IsLoadingStatistics, Mode=OneWay}"
                                HorizontalAlignment="Center"
                                Width="60"
                                Height="60"/>

                            <!-- Statistics Cards Grid -->
                            <Grid Visibility="{x:Bind ViewModel.IsLoadingStatistics, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Row 1: Main Stats -->
                                <Grid Grid.Row="0" Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Total Canvases Card -->
                                    <Border
                                        Grid.Column="0"
                                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                                        CornerRadius="8"
                                        Padding="20"
                                        Margin="0,0,8,0">
                                        <Border.Shadow>
                                            <ThemeShadow />
                                        </Border.Shadow>
                                        <StackPanel Spacing="8">
                                            <FontIcon Glyph="&#xE8B7;" FontSize="32" Foreground="White"/>
                                            <TextBlock Text="Total Canvases" Style="{StaticResource BodyTextBlockStyle}" Foreground="White"/>
                                            <TextBlock Text="{x:Bind ViewModel.TotalCanvases, Mode=OneWay}" Style="{StaticResource TitleLargeTextBlockStyle}" Foreground="White"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Total Shapes Card -->
                                    <Border
                                        Grid.Column="1"
                                        Background="{ThemeResource SystemFillColorAttentionBrush}"
                                        CornerRadius="8"
                                        Padding="20"
                                        Margin="4,0,4,0">
                                        <Border.Shadow>
                                            <ThemeShadow />
                                        </Border.Shadow>
                                        <StackPanel Spacing="8">
                                            <FontIcon Glyph="&#xE91B;" FontSize="32" Foreground="White"/>
                                            <TextBlock Text="Total Shapes" Style="{StaticResource BodyTextBlockStyle}" Foreground="White"/>
                                            <TextBlock Text="{x:Bind ViewModel.TotalShapesCount, Mode=OneWay}" Style="{StaticResource TitleLargeTextBlockStyle}" Foreground="White"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Total Templates Card -->
                                    <Border
                                        Grid.Column="2"
                                        Background="{ThemeResource SystemFillColorSuccessBrush}"
                                        CornerRadius="8"
                                        Padding="20"
                                        Margin="4,0,4,0">
                                        <Border.Shadow>
                                            <ThemeShadow />
                                        </Border.Shadow>
                                        <StackPanel Spacing="8">
                                            <FontIcon Glyph="&#xE8F1;" FontSize="32" Foreground="White"/>
                                            <TextBlock Text="Total Templates" Style="{StaticResource BodyTextBlockStyle}" Foreground="White"/>
                                            <TextBlock Text="{x:Bind ViewModel.TotalTemplates, Mode=OneWay}" Style="{StaticResource TitleLargeTextBlockStyle}" Foreground="White"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Average Shapes Per Canvas Card -->
                                    <Border
                                        Grid.Column="3"
                                        Background="{ThemeResource SystemFillColorCautionBrush}"
                                        CornerRadius="8"
                                        Padding="20"
                                        Margin="8,0,0,0">
                                        <Border.Shadow>
                                            <ThemeShadow />
                                        </Border.Shadow>
                                        <StackPanel Spacing="8">
                                            <FontIcon Glyph="&#xE9D9;" FontSize="32" Foreground="White"/>
                                            <TextBlock Text="Avg Shapes/Canvas" Style="{StaticResource BodyTextBlockStyle}" Foreground="White"/>
                                            <TextBlock Text="{x:Bind ViewModel.AverageShapesPerCanvas, Mode=OneWay}" Style="{StaticResource TitleLargeTextBlockStyle}" Foreground="White"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <!-- Row 2: Charts -->
                                <Grid Grid.Row="1" Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Shape Type Distribution - Improved Column Chart -->
                                    <Border
                                        Grid.Column="0"
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="20"
                                        Margin="0,0,8,0">
                                        <Border.Shadow>
                                            <ThemeShadow />
                                        </Border.Shadow>
                                        <StackPanel Spacing="16">
                                            <StackPanel Spacing="4">
                                                <TextBlock Text="Shape Type Distribution" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                                <TextBlock 
                                                    Text="Top 6 most used shape types"
                                                    Style="{StaticResource CaptionTextBlockStyle}"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            </StackPanel>

                                            <!-- Column Chart -->
                                            <Grid Height="320">
                                                <!-- Empty State -->
                                                <StackPanel 
                                                    VerticalAlignment="Center" 
                                                    HorizontalAlignment="Center"
                                                    Spacing="12"
                                                    Visibility="{x:Bind ViewModel.ShapeTypeChartData.Count, Mode=OneWay, Converter={StaticResource IntToVisibilityInverseConverter}}">
                                                    <FontIcon Glyph="&#xE9F3;" FontSize="48" Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                                    <TextBlock 
                                                        Text="No data available" 
                                                        Style="{StaticResource BodyTextBlockStyle}"
                                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                    <TextBlock 
                                                        Text="Start creating shapes to see statistics"
                                                        Style="{StaticResource CaptionTextBlockStyle}"
                                                        Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                                </StackPanel>

                                                <!-- Chart with Axes -->
                                                <Grid Visibility="{x:Bind ViewModel.ShapeTypeChartData.Count, Mode=OneWay, Converter={StaticResource IntToVisibilityConverter}}">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- Chart Area with Axes -->
                                                    <Grid Grid.Row="0" Margin="0,0,0,12">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="50"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="*"/>
                                                            <RowDefinition Height="30"/>
                                                        </Grid.RowDefinitions>

                                                        <!-- Y-Axis -->
                                                        <Grid Grid.Column="0" Grid.Row="0" Margin="0,0,8,0">
                                                            <!-- Y-Axis Line -->
                                                            <Line 
                                                                X1="42" Y1="0" 
                                                                X2="42" Y2="240"
                                                                Stroke="{ThemeResource CardStrokeColorDefaultBrush}"
                                                                StrokeThickness="2"
                                                                HorizontalAlignment="Right"/>
                                                            
                                                            <!-- Y-Axis Labels -->
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="*"/>
                                                                    <RowDefinition Height="*"/>
                                                                    <RowDefinition Height="*"/>
                                                                    <RowDefinition Height="*"/>
                                                                    <RowDefinition Height="*"/>
                                                                </Grid.RowDefinitions>

                                                                <TextBlock 
                                                                    Grid.Row="0"
                                                                    Text="{x:Bind ViewModel.ShapeTypeChartData[0].Value, Mode=OneWay, FallbackValue='100'}"
                                                                    Style="{StaticResource CaptionTextBlockStyle}"
                                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                                    HorizontalAlignment="Right"
                                                                    VerticalAlignment="Top"
                                                                    Margin="0,0,8,0"/>
                                                                
                                                                <TextBlock 
                                                                    Grid.Row="4"
                                                                    Text="0"
                                                                    Style="{StaticResource CaptionTextBlockStyle}"
                                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                                    HorizontalAlignment="Right"
                                                                    VerticalAlignment="Bottom"
                                                                    Margin="0,0,8,0"/>
                                                            </Grid>
                                                        </Grid>

                                                        <!-- Chart Grid with Gridlines -->
                                                        <Grid Grid.Column="1" Grid.Row="0">
                                                            <!-- Horizontal Gridlines -->
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="*"/>
                                                                    <RowDefinition Height="*"/>
                                                                    <RowDefinition Height="*"/>
                                                                    <RowDefinition Height="*"/>
                                                                    <RowDefinition Height="*"/>
                                                                </Grid.RowDefinitions>

                                                                <Line Grid.Row="0" X1="0" Y1="0" X2="1000" Y2="0" 
                                                                      Stroke="{ThemeResource DividerStrokeColorDefaultBrush}" 
                                                                      StrokeThickness="1" 
                                                                      StrokeDashArray="2,2"
                                                                      Opacity="0.3"
                                                                      Stretch="Fill"/>
                                                                <Line Grid.Row="1" X1="0" Y1="0" X2="1000" Y2="0" 
                                                                      Stroke="{ThemeResource DividerStrokeColorDefaultBrush}" 
                                                                      StrokeThickness="1" 
                                                                      StrokeDashArray="2,2"
                                                                      Opacity="0.3"
                                                                      Stretch="Fill"/>
                                                                <Line Grid.Row="2" X1="0" Y1="0" X2="1000" Y2="0" 
                                                                      Stroke="{ThemeResource DividerStrokeColorDefaultBrush}" 
                                                                      StrokeThickness="1" 
                                                                      StrokeDashArray="2,2"
                                                                      Opacity="0.3"
                                                                      Stretch="Fill"/>
                                                                <Line Grid.Row="3" X1="0" Y1="0" X2="1000" Y2="0" 
                                                                      Stroke="{ThemeResource DividerStrokeColorDefaultBrush}" 
                                                                      StrokeThickness="1" 
                                                                      StrokeDashArray="2,2"
                                                                      Opacity="0.3"
                                                                      Stretch="Fill"/>
                                                            </Grid>

                                                            <!-- Columns Container -->
                                                            <ItemsControl ItemsSource="{x:Bind ViewModel.ShapeTypeChartData, Mode=OneWay}" 
                                                                         VerticalAlignment="Bottom"
                                                                         Margin="0,0,0,0">
                                                                <ItemsControl.ItemsPanel>
                                                                    <ItemsPanelTemplate>
                                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                                                                    </ItemsPanelTemplate>
                                                                </ItemsControl.ItemsPanel>
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate x:DataType="viewmodels:ChartDataItem">
                                                                        <Grid Margin="12,0" Width="70" Height="240" VerticalAlignment="Bottom">
                                                                            <!-- Column Bar with Shadow -->
                                                                            <Border 
                                                                                Height="{x:Bind Percentage, Mode=OneWay}"
                                                                                MaxHeight="240"
                                                                                VerticalAlignment="Bottom"
                                                                                CornerRadius="6,6,0,0"
                                                                                Background="{ThemeResource AccentFillColorDefaultBrush}"
                                                                                Padding="0,8,0,0">
                                                                                <Border.Shadow>
                                                                                    <ThemeShadow />
                                                                                </Border.Shadow>
                                                                                
                                                                                <!-- Gradient Overlay -->
                                                                                <Border.OpacityTransition>
                                                                                    <ScalarTransition/>
                                                                                </Border.OpacityTransition>
                                                                                
                                                                                <Grid>
                                                                                    <!-- Value Label -->
                                                                                    <TextBlock 
                                                                                        Text="{x:Bind Value}"
                                                                                        Style="{StaticResource BodyStrongTextBlockStyle}"
                                                                                        Foreground="White"
                                                                                        HorizontalAlignment="Center"
                                                                                        VerticalAlignment="Top"
                                                                                        FontSize="16"/>
                                                                                </Grid>
                                                                            </Border>
                                                                        </Grid>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                        </Grid>

                                                        <!-- X-Axis -->
                                                        <Grid Grid.Column="1" Grid.Row="1">
                                                            <!-- X-Axis Line -->
                                                            <Line 
                                                                X1="0" Y1="0" 
                                                                X2="1000" Y2="0"
                                                                Stroke="{ThemeResource CardStrokeColorDefaultBrush}"
                                                                StrokeThickness="2"
                                                                Stretch="Fill"
                                                                VerticalAlignment="Top"/>
                                                            
                                                            <!-- X-Axis Labels -->
                                                            <ItemsControl ItemsSource="{x:Bind ViewModel.ShapeTypeChartData, Mode=OneWay}" 
                                                                         Margin="0,4,0,0">
                                                                <ItemsControl.ItemsPanel>
                                                                    <ItemsPanelTemplate>
                                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                                                                    </ItemsPanelTemplate>
                                                                </ItemsControl.ItemsPanel>
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate x:DataType="viewmodels:ChartDataItem">
                                                                        <TextBlock 
                                                                            Text="{x:Bind Label}"
                                                                            Width="70"
                                                                            Margin="12,0"
                                                                            Style="{StaticResource BodyTextBlockStyle}"
                                                                            FontWeight="SemiBold"
                                                                            Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                                                            HorizontalAlignment="Center"
                                                                            TextAlignment="Center"
                                                                            TextWrapping="NoWrap"
                                                                            TextTrimming="CharacterEllipsis"/>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                        </Grid>
                                                    </Grid>

                                                    <!-- Legend -->
                                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="16" HorizontalAlignment="Center">
                                                        <Border 
                                                            Background="{ThemeResource AccentFillColorDefaultBrush}" 
                                                            Width="16" 
                                                            Height="16" 
                                                            CornerRadius="3"
                                                            VerticalAlignment="Center">
                                                            <Border.Shadow>
                                                                <ThemeShadow />
                                                            </Border.Shadow>
                                                        </Border>
                                                        <TextBlock 
                                                            Text="Shape Count" 
                                                            Style="{StaticResource BodyTextBlockStyle}"
                                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                            VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Grid>
                                        </StackPanel>
                                    </Border>

                                    <!-- Top 5 Templates - Bar Chart -->
                                    <Border
                                        Grid.Column="1"
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="20"
                                        Margin="8,0,0,0">
                                        <Border.Shadow>
                                            <ThemeShadow />
                                        </Border.Shadow>
                                        <StackPanel Spacing="16">
                                            <StackPanel Spacing="4">
                                                <TextBlock Text="Top 5 Templates" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                                <TextBlock 
                                                    Text="Most frequently used templates"
                                                    Style="{StaticResource CaptionTextBlockStyle}"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            </StackPanel>

                                            <!-- Bar Chart Placeholder -->
                                            <Grid Height="300">
                                                <StackPanel 
                                                    VerticalAlignment="Center" 
                                                    HorizontalAlignment="Center"
                                                    Spacing="12"
                                                    Visibility="{x:Bind ViewModel.TopTemplatesChartData.Count, Mode=OneWay, Converter={StaticResource IntToVisibilityInverseConverter}}">
                                                    <FontIcon Glyph="&#xE8F1;" FontSize="48" Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                                    <TextBlock 
                                                        Text="No templates used yet" 
                                                        Style="{StaticResource BodyTextBlockStyle}"
                                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                </StackPanel>

                                                <!-- Bar Chart Data (Temporary) -->
                                                <ScrollViewer VerticalScrollBarVisibility="Auto" Visibility="{x:Bind ViewModel.TopTemplatesChartData.Count, Mode=OneWay, Converter={StaticResource IntToVisibilityConverter}}">
                                                    <ItemsControl ItemsSource="{x:Bind ViewModel.TopTemplatesChartData, Mode=OneWay}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate x:DataType="viewmodels:ChartDataItem">
                                                                <StackPanel Margin="0,8,0,8">
                                                                    <Grid Margin="0,0,0,4">
                                                                        <TextBlock Text="{x:Bind Label}" Style="{StaticResource BodyTextBlockStyle}"/>
                                                                        <TextBlock Text="{x:Bind Value}" Style="{StaticResource BodyStrongTextBlockStyle}" HorizontalAlignment="Right" Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                                                                    </Grid>
                                                                    <ProgressBar 
                                                                        Value="{x:Bind Value}" 
                                                                        Maximum="100"
                                                                        Height="8"
                                                                        Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </ScrollViewer>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <!-- Row 3: Additional Info Cards -->
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Most Used Shape Type -->
                                    <Border
                                        Grid.Column="0"
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="20"
                                        Margin="0,0,8,0">
                                        <Border.Shadow>
                                            <ThemeShadow />
                                        </Border.Shadow>
                                        <StackPanel Spacing="8">
                                            <FontIcon Glyph="&#xE76E;" FontSize="24" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                            <TextBlock Text="Most Used Shape" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock Text="{x:Bind ViewModel.MostUsedShapeType, Mode=OneWay, FallbackValue='N/A'}" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                            <TextBlock Style="{StaticResource BodyTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                <Run Text="Used "/>
                                                <Run Text="{x:Bind ViewModel.MostUsedShapeTypeCount, Mode=OneWay}"/>
                                                <Run Text=" times"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>

                                    <!-- Most Used Color -->
                                    <Border
                                        Grid.Column="1"
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="20"
                                        Margin="4,0,4,0">
                                        <Border.Shadow>
                                            <ThemeShadow />
                                        </Border.Shadow>
                                        <StackPanel Spacing="8">
                                            <FontIcon Glyph="&#xE790;" FontSize="24" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                            <TextBlock Text="Most Used Color" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <StackPanel Orientation="Horizontal" Spacing="12">
                                                <Border 
                                                    Width="40" 
                                                    Height="40" 
                                                    CornerRadius="4"
                                                    BorderThickness="1"
                                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                                                    <Border.Background>
                                                        <SolidColorBrush Color="{x:Bind ViewModel.MostUsedColor, Mode=OneWay, FallbackValue='#808080'}"/>
                                                    </Border.Background>
                                                </Border>
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="{x:Bind ViewModel.MostUsedColor, Mode=OneWay, FallbackValue='N/A'}" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                                    <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                        <Run Text="Used "/>
                                                        <Run Text="{x:Bind ViewModel.MostUsedColorCount, Mode=OneWay}"/>
                                                        <Run Text=" times"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>

                                    <!-- Activity Info -->
                                    <Border
                                        Grid.Column="2"
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="20"
                                        Margin="8,0,0,0">
                                        <Border.Shadow>
                                            <ThemeShadow />
                                        </Border.Shadow>
                                        <StackPanel Spacing="8">
                                            <FontIcon Glyph="&#xE787;" FontSize="24" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                            <TextBlock Text="Activity" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock Text="{x:Bind ViewModel.ActiveDays, Mode=OneWay}" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                            <TextBlock Text="Active Days" Style="{StaticResource BodyTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorTertiaryBrush}">
                                                <Run Text="Last activity: "/>
                                                <Run Text="{x:Bind ViewModel.LastActivity, Mode=OneWay, FallbackValue='Never'}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </TabViewItem>

                <TabViewItem Header="Canvases">
                    <TabViewItem.IconSource>
                        <FontIconSource Glyph="&#xE8B7;"/>
                    </TabViewItem.IconSource>
                    <Grid Padding="24">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header with Profile Selector and Refresh -->
                        <Grid Grid.Row="0" Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                                <TextBlock Text="Profile:" Style="{StaticResource BodyStrongTextBlockStyle}" VerticalAlignment="Center"/>
                                <ComboBox
                                    ItemsSource="{x:Bind ViewModel.Profiles, Mode=OneWay}"
                                    SelectedItem="{x:Bind ViewModel.SelectedProfile, Mode=TwoWay}"
                                    DisplayMemberPath="Name"
                                    MinWidth="200"/>
                            </StackPanel>

                            <Button
                                Grid.Column="2"
                                Command="{x:Bind ViewModel.RefreshCanvasesCommand}"
                                Style="{StaticResource AccentButtonStyle}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE72C;" FontSize="16"/>
                                    <TextBlock Text="Refresh"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Canvas Grid -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel Spacing="16">
                                <ProgressRing 
                                    IsActive="{x:Bind ViewModel.IsLoadingCanvases, Mode=OneWay}"
                                    Visibility="{x:Bind ViewModel.IsLoadingCanvases, Mode=OneWay}"
                                    HorizontalAlignment="Center"
                                    Width="50"
                                    Height="50"/>

                                <GridView
                                    ItemsSource="{x:Bind ViewModel.Canvases, Mode=OneWay}"
                                    SelectionMode="None"
                                    IsItemClickEnabled="False"
                                    Padding="0"
                                    Visibility="{x:Bind ViewModel.IsLoadingCanvases, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                                    <GridView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <ItemsWrapGrid Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </GridView.ItemsPanel>
                                    <GridView.ItemTemplate>
                                        <DataTemplate x:DataType="models:Canvas">
                                            <Border
                                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                BorderThickness="1"
                                                CornerRadius="8"
                                                Width="280"
                                                Margin="8"
                                                Padding="16"
                                                DoubleTapped="CanvasCard_DoubleTapped">
                                                <Border.Shadow>
                                                    <ThemeShadow />
                                                </Border.Shadow>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- Canvas Preview -->
                                                    <Border
                                                        Grid.Row="0"
                                                        Background="White"
                                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                        BorderThickness="1"
                                                        CornerRadius="4"
                                                        Height="120"
                                                        Margin="0,0,0,12">
                                                        <Grid>
                                                            <FontIcon 
                                                                Glyph="&#xE8B7;" 
                                                                FontSize="48"
                                                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>

                                                    <!-- Canvas Info -->
                                                    <StackPanel Grid.Row="1" Spacing="6" Margin="0,0,0,12" Height="80">
                                                        <TextBlock 
                                                            Text="{x:Bind Name}" 
                                                            Style="{StaticResource BodyStrongTextBlockStyle}"
                                                            TextTrimming="CharacterEllipsis"
                                                            MaxLines="1"/>
                                                        <TextBlock 
                                                            Style="{StaticResource CaptionTextBlockStyle}"
                                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                            <Run Text="Size: "/>
                                                            <Run Text="{x:Bind Width}"/>
                                                            <Run Text=" Ã— "/>
                                                            <Run Text="{x:Bind Height}"/>
                                                            <Run Text=" px"/>
                                                        </TextBlock>
                                                        <TextBlock 
                                                            Style="{StaticResource CaptionTextBlockStyle}"
                                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                            TextTrimming="CharacterEllipsis">
                                                            <Run Text="Created: "/>
                                                            <Run Text="{x:Bind CreatedAt}"/>
                                                        </TextBlock>
                                                    </StackPanel>

                                                    <!-- Action Buttons -->
                                                    <Grid Grid.Row="2" Height="40">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Button
                                                            Grid.Column="0"
                                                            HorizontalAlignment="Stretch"
                                                            VerticalAlignment="Stretch"
                                                            Margin="0,0,4,0"
                                                            Click="OpenCanvasButton_Click"
                                                            Tag="{x:Bind}"
                                                            Style="{StaticResource AccentButtonStyle}">
                                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                                <FontIcon Glyph="&#xE8A7;" FontSize="16"/>
                                                                <TextBlock Text="Open"/>
                                                            </StackPanel>
                                                        </Button>

                                                        <Button
                                                            Grid.Column="1"
                                                            Width="40"
                                                            Height="40"
                                                            Padding="0"
                                                            Margin="4,0,0,0"
                                                            Click="DeleteCanvasButton_Click"
                                                            Tag="{x:Bind}"
                                                            ToolTipService.ToolTip="Delete canvas"
                                                            CornerRadius="4">
                                                            <Button.Resources>
                                                                <SolidColorBrush x:Key="ButtonBackground" Color="#DC3545"/>
                                                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#BB2D3B"/>
                                                                <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#A02834"/>
                                                                <SolidColorBrush x:Key="ButtonForeground" Color="White"/>
                                                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White"/>
                                                                <SolidColorBrush x:Key="ButtonForegroundPressed" Color="White"/>
                                                            </Button.Resources>
                                                            <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                                                        </Button>
                                                    </Grid>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </GridView.ItemTemplate>
                                </GridView>

                                <!-- Empty State -->
                                <StackPanel 
                                    Spacing="16" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center"
                                    Margin="0,40,0,0"
                                    Visibility="{x:Bind ViewModel.Canvases.Count, Mode=OneWay, Converter={StaticResource IntToVisibilityInverseConverter}}">
                                    <FontIcon Glyph="&#xE8B7;" FontSize="64" Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                    <TextBlock
                                        Text="No canvases found"
                                        Style="{StaticResource TitleTextBlockStyle}"
                                        TextAlignment="Center"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock
                                        Text="Create a new canvas from the Draw page"
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        TextAlignment="Center"
                                        Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </TabViewItem>

                <TabViewItem Header="Templates">
                    <TabViewItem.IconSource>
                        <FontIconSource Glyph="&#xE8F1;"/>
                    </TabViewItem.IconSource>
                    <Grid Padding="24">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header with Refresh and Cleanup -->
                        <Grid Grid.Row="0" Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                                <FontIcon Glyph="&#xE8F1;" FontSize="24" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                <StackPanel>
                                    <TextBlock Text="Template Library" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                    <TextBlock 
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                        <Run Text="Total: "/>
                                        <Run Text="{x:Bind ViewModel.TemplateShapes.Count, Mode=OneWay}"/>
                                        <Run Text=" templates"/>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>

                            <Button
                                Grid.Column="2"
                                Command="{x:Bind ViewModel.RefreshTemplatesCommand}"
                                Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE72C;" FontSize="16"/>
                                    <TextBlock Text="Refresh"/>
                                </StackPanel>
                            </Button>

                            <Button
                                Grid.Column="3"
                                Command="{x:Bind ViewModel.CleanupDuplicateTemplatesCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE75C;" FontSize="16"/>
                                    <TextBlock Text="Cleanup Duplicates"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Templates Grid -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel Spacing="16">
                                <ProgressRing 
                                    IsActive="{x:Bind ViewModel.IsLoadingTemplates, Mode=OneWay}"
                                    Visibility="{x:Bind ViewModel.IsLoadingTemplates, Mode=OneWay}"
                                    HorizontalAlignment="Center"
                                    Width="50"
                                    Height="50"/>

                                <GridView
                                    ItemsSource="{x:Bind ViewModel.TemplateShapes, Mode=OneWay}"
                                    SelectionMode="None"
                                    IsItemClickEnabled="False"
                                    Padding="0"
                                    Visibility="{x:Bind ViewModel.IsLoadingTemplates, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                                    <GridView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <ItemsWrapGrid Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </GridView.ItemsPanel>
                                    <GridView.ItemTemplate>
                                        <DataTemplate x:DataType="models:Shape">
                                            <Border
                                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                BorderThickness="1"
                                                CornerRadius="8"
                                                Width="240"
                                                Margin="8"
                                                Padding="16">
                                                <Border.Shadow>
                                                    <ThemeShadow />
                                                </Border.Shadow>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- Template Preview -->
                                                    <Border
                                                        Grid.Row="0"
                                                        Background="White"
                                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                        BorderThickness="1"
                                                        CornerRadius="4"
                                                        Height="120"
                                                        Margin="0,0,0,12">
                                                        <controls:ShapeThumbnailControl
                                                            Shape="{x:Bind}"
                                                            Width="120"
                                                            Height="120"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                                    </Border>

                                                    <!-- Template Info -->
                                                    <StackPanel Grid.Row="1" Spacing="6" Margin="0,0,0,12">
                                                        <TextBlock 
                                                            Text="{x:Bind Type}" 
                                                            Style="{StaticResource BodyStrongTextBlockStyle}"
                                                            TextTrimming="CharacterEllipsis"
                                                            MaxLines="1"/>
                                                        <TextBlock 
                                                            Style="{StaticResource CaptionTextBlockStyle}"
                                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                            <Run Text="ID: "/>
                                                            <Run Text="{x:Bind Id}"/>
                                                        </TextBlock>
                                                        <TextBlock 
                                                            Style="{StaticResource CaptionTextBlockStyle}"
                                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                            <Run Text="Size: "/>
                                                            <Run Text="{x:Bind Width}"/>
                                                            <Run Text=" Ã— "/>
                                                            <Run Text="{x:Bind Height}"/>
                                                        </TextBlock>
                                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                                            <FontIcon Glyph="&#xE76E;" FontSize="12" Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                                                            <TextBlock 
                                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                                Foreground="{ThemeResource SystemFillColorSuccessBrush}">
                                                                <Run Text="Used "/>
                                                                <Run Text="{x:Bind UsageCount}"/>
                                                                <Run Text=" times"/>
                                                            </TextBlock>
                                                        </StackPanel>
                                                        <TextBlock 
                                                            Style="{StaticResource CaptionTextBlockStyle}"
                                                            Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                            FontSize="10">
                                                            <Run Text="Created: "/>
                                                            <Run Text="{x:Bind CreatedAt}"/>
                                                        </TextBlock>
                                                    </StackPanel>

                                                    <!-- Action Button -->
                                                    <Button
                                                        Grid.Row="2"
                                                        HorizontalAlignment="Stretch"
                                                        Click="DeleteTemplateButton_Click"
                                                        Tag="{x:Bind}">
                                                        <Button.Resources>
                                                            <SolidColorBrush x:Key="ButtonBackground" Color="#DC3545"/>
                                                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#BB2D3B"/>
                                                            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#A02834"/>
                                                            <SolidColorBrush x:Key="ButtonForeground" Color="White"/>
                                                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White"/>
                                                            <SolidColorBrush x:Key="ButtonForegroundPressed" Color="White"/>
                                                        </Button.Resources>
                                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                                            <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                                                            <TextBlock Text="Delete Template"/>
                                                        </StackPanel>
                                                    </Button>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </GridView.ItemTemplate>
                                </GridView>

                                <!-- Empty State -->
                                <StackPanel 
                                    Spacing="16" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center"
                                    Margin="0,40,0,0"
                                    Visibility="{x:Bind ViewModel.TemplateShapes.Count, Mode=OneWay, Converter={StaticResource IntToVisibilityInverseConverter}}">
                                    <FontIcon Glyph="&#xE8F1;" FontSize="64" Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                    <TextBlock
                                        Text="No templates found"
                                        Style="{StaticResource TitleTextBlockStyle}"
                                        TextAlignment="Center"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock
                                        Text="Save shapes as templates from the Draw page"
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        TextAlignment="Center"
                                        Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </TabViewItem>
            </TabView.TabItems>
        </TabView>
    </Grid>
</Page>
