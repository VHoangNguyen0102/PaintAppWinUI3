<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PaintApp.Views.DrawPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PaintApp.Views"
    xmlns:viewmodels="using:PaintApp.ViewModels"
    xmlns:converters="using:PaintApp.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:BoolToVisibilityInverseConverter x:Key="BoolToVisibilityInverseConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:ColorToSolidColorBrushConverter x:Key="ColorToSolidColorBrushConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <CommandBar Grid.Row="0" DefaultLabelPosition="Right">
            <AppBarButton 
                Icon="Add" 
                Label="New Canvas" 
                Command="{x:Bind ViewModel.NewCanvasCommand}"
                ToolTipService.ToolTip="Create a new canvas"/>
            
            <AppBarSeparator/>

            <AppBarButton Label="Select" Tag="Select" Click="ToolButton_Click">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE710;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton Icon="Edit" Label="Line" Click="ToolButton_Click" Tag="Line"/>
            <AppBarButton Label="Rectangle" Click="ToolButton_Click" Tag="Rectangle">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE739;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton Label="Oval" Click="ToolButton_Click" Tag="Oval">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xF540;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton Label="Circle" Click="ToolButton_Click" Tag="Circle">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xEA3A;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton Label="Triangle" Click="ToolButton_Click" Tag="Triangle">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE764;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton Label="Polygon" Click="ToolButton_Click" Tag="Polygon">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE81E;"/>
                </AppBarButton.Icon>
            </AppBarButton>

            <AppBarSeparator/>

            <AppBarButton Icon="Undo" Label="Undo" Command="{x:Bind ViewModel.UndoCommand}"/>
            <AppBarButton Icon="Redo" Label="Redo" Command="{x:Bind ViewModel.RedoCommand}"/>

            <AppBarSeparator/>

            <AppBarButton Icon="Delete" Label="Clear" Command="{x:Bind ViewModel.ClearCanvasCommand}"/>
            <AppBarButton Icon="Save" Label="Save" Command="{x:Bind ViewModel.SaveCommand}"/>
        </CommandBar>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,1,1,0"
                Padding="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="24">
                        <TextBlock Text="Shape Properties" Style="{StaticResource SubtitleTextBlockStyle}"/>

                        <StackPanel Spacing="12">
                            <TextBlock Text="Stroke Color" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <GridView
                                ItemsSource="{x:Bind ViewModel.ColorPalette}"
                                SelectionMode="Single"
                                IsItemClickEnabled="True"
                                ItemClick="StrokeColorPicker_ItemClick"
                                MaxHeight="200">
                                <GridView.ItemTemplate>
                                    <DataTemplate x:DataType="Color">
                                        <Border
                                            Width="40"
                                            Height="40"
                                            CornerRadius="4"
                                            BorderThickness="2"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                                            <Border.Background>
                                                <SolidColorBrush Color="{x:Bind Mode=OneWay}"/>
                                            </Border.Background>
                                        </Border>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                            </GridView>
                            <Border
                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                CornerRadius="4"
                                Padding="12,8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Border
                                        Width="24"
                                        Height="24"
                                        CornerRadius="4"
                                        BorderThickness="2"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                                        <Border.Background>
                                            <SolidColorBrush Color="{x:Bind ViewModel.CurrentStrokeColor, Mode=OneWay}"/>
                                        </Border.Background>
                                    </Border>
                                    <TextBlock 
                                        Text="Current Stroke Color" 
                                        VerticalAlignment="Center"
                                        Style="{StaticResource CaptionTextBlockStyle}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <StackPanel Spacing="12">
                            <TextBlock Text="Stroke Thickness" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <Slider
                                Minimum="0.5"
                                Maximum="10"
                                Value="{x:Bind ViewModel.CurrentStrokeThickness, Mode=TwoWay}"
                                StepFrequency="0.5"
                                TickFrequency="1"
                                TickPlacement="BottomRight"/>
                            <TextBlock Style="{StaticResource CaptionTextBlockStyle}">
                                <Run Text="Thickness: "/>
                                <Run Text="{x:Bind ViewModel.CurrentStrokeThickness, Mode=OneWay}"/>
                                <Run Text=" px"/>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Spacing="12">
                            <TextBlock Text="Dash Style" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <ComboBox
                                ItemsSource="{x:Bind ViewModel.DashStyles}"
                                SelectedItem="{x:Bind ViewModel.SelectedDashStyle, Mode=TwoWay}"
                                HorizontalAlignment="Stretch"/>
                            <TextBlock 
                                Text="Line pattern for outlines" 
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>

                        <StackPanel Spacing="12">
                            <TextBlock Text="Fill Color" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <ToggleSwitch
                                Header="Enable Fill"
                                IsOn="{x:Bind ViewModel.IsFillEnabled, Mode=TwoWay}"
                                OnContent="Fill Enabled"
                                OffContent="Fill Disabled"/>
                            <GridView
                                ItemsSource="{x:Bind ViewModel.ColorPalette}"
                                SelectionMode="Single"
                                IsItemClickEnabled="True"
                                ItemClick="FillColorPicker_ItemClick"
                                IsEnabled="{x:Bind ViewModel.IsFillEnabled, Mode=OneWay}"
                                MaxHeight="200">
                                <GridView.ItemTemplate>
                                    <DataTemplate x:DataType="Color">
                                        <Border
                                            Width="40"
                                            Height="40"
                                            CornerRadius="4"
                                            BorderThickness="2"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                                            <Border.Background>
                                                <SolidColorBrush Color="{x:Bind Mode=OneWay}"/>
                                            </Border.Background>
                                        </Border>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                            </GridView>
                            <Border
                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                CornerRadius="4"
                                Padding="12,8"
                                Visibility="{x:Bind ViewModel.IsFillEnabled, Mode=OneWay}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Border
                                        Width="24"
                                        Height="24"
                                        CornerRadius="4"
                                        BorderThickness="2"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        Background="{ThemeResource SystemFillColorAttentionBrush}"/>
                                    <TextBlock 
                                        Text="Current Fill Color" 
                                        VerticalAlignment="Center"
                                        Style="{StaticResource CaptionTextBlockStyle}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <StackPanel Spacing="12">
                            <TextBlock Text="Current Tool" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <Border
                                Background="{ThemeResource AccentFillColorDefaultBrush}"
                                CornerRadius="4"
                                Padding="12,8">
                                <TextBlock Text="{x:Bind ViewModel.SelectedTool, Mode=OneWay}" Foreground="White" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Spacing="12">
                            <TextBlock Text="Default Settings" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <Button
                                Command="{x:Bind ViewModel.SaveAsDefaultCommand}"
                                HorizontalAlignment="Stretch"
                                Style="{StaticResource AccentButtonStyle}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE74E;" FontSize="16"/>
                                    <TextBlock Text="Save as Default"/>
                                </StackPanel>
                            </Button>
                            <TextBlock 
                                Text="Save current stroke, fill, and thickness settings as default for this profile" 
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <Border
                Grid.Column="1"
                Background="White"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0"
                Margin="1,0">
                <ScrollViewer
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Auto"
                    ZoomMode="Disabled">
                    <Canvas
                        x:Name="DrawingCanvas"
                        Background="White"
                        PointerPressed="Canvas_PointerPressed"
                        PointerMoved="Canvas_PointerMoved"
                        PointerReleased="Canvas_PointerReleased"
                        RightTapped="Canvas_RightTapped"/>
                </ScrollViewer>
            </Border>

            <Border
                Grid.Column="2"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1,1,0,0"
                Padding="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="24">
                        <TextBlock Text="Selection Properties" Style="{StaticResource SubtitleTextBlockStyle}"/>

                        <StackPanel Spacing="12" Visibility="{x:Bind ViewModel.IsShapeSelected, Mode=OneWay}">
                            <InfoBar
                                IsOpen="True"
                                Severity="Informational"
                                Title="Shape Selected"
                                Message="{x:Bind ViewModel.SelectedShapeInfo, Mode=OneWay}"/>

                            <StackPanel Spacing="8">
                                <TextBlock Text="Stroke Properties" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                
                                <TextBlock Text="Stroke Color" Style="{StaticResource CaptionTextBlockStyle}" Margin="0,8,0,4"/>
                                <GridView
                                    ItemsSource="{x:Bind ViewModel.ColorPalette}"
                                    SelectionMode="Single"
                                    IsItemClickEnabled="True"
                                    ItemClick="SelectedShapeStrokeColorPicker_ItemClick"
                                    MaxHeight="120">
                                    <GridView.ItemTemplate>
                                        <DataTemplate x:DataType="Color">
                                            <Border
                                                Width="32"
                                                Height="32"
                                                CornerRadius="4"
                                                BorderThickness="2"
                                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                                                <Border.Background>
                                                    <SolidColorBrush Color="{x:Bind Mode=OneWay}"/>
                                                </Border.Background>
                                            </Border>
                                        </DataTemplate>
                                    </GridView.ItemTemplate>
                                </GridView>
                                <Border
                                    Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                    CornerRadius="4"
                                    Padding="8,6">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <Border
                                            Width="20"
                                            Height="20"
                                            CornerRadius="4"
                                            BorderThickness="2"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                                            <Border.Background>
                                                <SolidColorBrush Color="{x:Bind ViewModel.SelectedShapeStrokeColor, Mode=OneWay}"/>
                                            </Border.Background>
                                        </Border>
                                        <TextBlock 
                                            Text="Current" 
                                            VerticalAlignment="Center"
                                            Style="{StaticResource CaptionTextBlockStyle}"/>
                                    </StackPanel>
                                </Border>

                                <TextBlock Text="Stroke Thickness" Style="{StaticResource CaptionTextBlockStyle}" Margin="0,8,0,4"/>
                                <Slider
                                    Minimum="0.5"
                                    Maximum="10"
                                    Value="{x:Bind ViewModel.SelectedShapeStrokeThickness, Mode=TwoWay}"
                                    StepFrequency="0.5"
                                    TickFrequency="1"
                                    TickPlacement="BottomRight"/>
                                <TextBlock Style="{StaticResource CaptionTextBlockStyle}">
                                    <Run Text="Thickness: "/>
                                    <Run Text="{x:Bind ViewModel.SelectedShapeStrokeThickness, Mode=OneWay}"/>
                                    <Run Text=" px"/>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Spacing="8">
                                <TextBlock Text="Fill Properties" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <ToggleSwitch
                                    IsOn="{x:Bind ViewModel.SelectedShapeHasFill, Mode=TwoWay}"
                                    OnContent="Fill Enabled"
                                    OffContent="No Fill"/>
                                
                                <GridView
                                    ItemsSource="{x:Bind ViewModel.ColorPalette}"
                                    SelectionMode="Single"
                                    IsItemClickEnabled="True"
                                    ItemClick="SelectedShapeFillColorPicker_ItemClick"
                                    IsEnabled="{x:Bind ViewModel.SelectedShapeHasFill, Mode=OneWay}"
                                    MaxHeight="120">
                                    <GridView.ItemTemplate>
                                        <DataTemplate x:DataType="Color">
                                            <Border
                                                Width="32"
                                                Height="32"
                                                CornerRadius="4"
                                                BorderThickness="2"
                                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                                                <Border.Background>
                                                    <SolidColorBrush Color="{x:Bind Mode=OneWay}"/>
                                                </Border.Background>
                                            </Border>
                                        </DataTemplate>
                                    </GridView.ItemTemplate>
                                </GridView>
                                <Border
                                    Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                    CornerRadius="4"
                                    Padding="8,6"
                                    Visibility="{x:Bind ViewModel.SelectedShapeHasFill, Mode=OneWay}">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <Border
                                            Width="20"
                                            Height="20"
                                            CornerRadius="4"
                                            BorderThickness="2"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                            Background="{x:Bind ViewModel.SelectedShapeFillColor, Mode=OneWay, Converter={StaticResource ColorToSolidColorBrushConverter}}"/>
                                        <TextBlock 
                                            Text="Current" 
                                            VerticalAlignment="Center"
                                            Style="{StaticResource CaptionTextBlockStyle}"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <StackPanel Spacing="8">
                                <TextBlock Text="Shape Info" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <Border
                                    Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                    CornerRadius="4"
                                    Padding="12,8">
                                    <StackPanel Spacing="4">
                                        <TextBlock Style="{StaticResource CaptionTextBlockStyle}">
                                            <Run Text="Position: "/>
                                            <Run Text="{x:Bind ViewModel.SelectedShapeX, Mode=OneWay}"/>
                                            <Run Text=", "/>
                                            <Run Text="{x:Bind ViewModel.SelectedShapeY, Mode=OneWay}"/>
                                        </TextBlock>
                                        <TextBlock Style="{StaticResource CaptionTextBlockStyle}">
                                            <Run Text="Size: "/>
                                            <Run Text="{x:Bind ViewModel.SelectedShapeWidth, Mode=OneWay}"/>
                                            <Run Text=" Ã— "/>
                                            <Run Text="{x:Bind ViewModel.SelectedShapeHeight, Mode=OneWay}"/>
                                        </TextBlock>
                                        <TextBlock 
                                            Text="Use drag handles to resize and move"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            FontStyle="Italic"
                                            Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <Button 
                                Command="{x:Bind ViewModel.DeleteSelectedShapeCommand}"
                                HorizontalAlignment="Stretch"
                                Background="{ThemeResource SystemFillColorCriticalBrush}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                                    <TextBlock Text="Delete Shape"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <StackPanel Spacing="12" Visibility="{x:Bind ViewModel.IsShapeSelected, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                            <InfoBar
                                IsOpen="True"
                                Severity="Informational"
                                Title="No Selection"
                                Message="Click on a shape to see its properties"/>
                        </StackPanel>

                        <StackPanel Spacing="12">
                            <TextBlock Text="Canvas Info" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <StackPanel Spacing="4">
                                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                    <Run Text="Status: "/>
                                    <Run Text="{x:Bind ViewModel.CanvasInfo, Mode=OneWay}"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                    <Run Text="Shapes: "/>
                                    <Run Text="{x:Bind ViewModel.Shapes.Count, Mode=OneWay}"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                    <Run Text="Loaded: "/>
                                    <Run Text="{x:Bind ViewModel.IsCanvasLoaded, Mode=OneWay}"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>

                        <!-- Auto-Save Status -->
                        <StackPanel Spacing="12" Visibility="{x:Bind ViewModel.IsCanvasLoaded, Mode=OneWay}">
                            <TextBlock Text="Auto-Save" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <Border
                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                CornerRadius="4"
                                Padding="12,8">
                                <StackPanel Spacing="6">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <ProgressRing 
                                            Width="16" 
                                            Height="16"
                                            IsActive="{x:Bind ViewModel.IsAutoSaving, Mode=OneWay}"
                                            Visibility="{x:Bind ViewModel.IsAutoSaving, Mode=OneWay}"/>
                                        <FontIcon 
                                            Glyph="&#xE73E;" 
                                            FontSize="16"
                                            Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                            Visibility="{x:Bind ViewModel.IsAutoSaving, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}"/>
                                        <TextBlock 
                                            Text="{x:Bind ViewModel.AutoSaveStatus, Mode=OneWay}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock 
                                        Text="Auto-saves every 30 seconds"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        FontSize="11"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>
