<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PaintApp.Views.DrawPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PaintApp.Views"
    xmlns:viewmodels="using:PaintApp.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <CommandBar Grid.Row="0" DefaultLabelPosition="Right">
            <AppBarButton 
                Icon="Add" 
                Label="New Canvas" 
                Command="{x:Bind ViewModel.NewCanvasCommand}"
                ToolTipService.ToolTip="Create a new canvas"/>
            
            <AppBarSeparator/>

            <AppBarButton Label="Select" Tag="Select" Click="ToolButton_Click">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE710;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton Icon="Edit" Label="Line" Click="ToolButton_Click" Tag="Line"/>
            <AppBarButton Label="Rectangle" Click="ToolButton_Click" Tag="Rectangle">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE739;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton Label="Oval" Click="ToolButton_Click" Tag="Oval">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xF540;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton Label="Circle" Click="ToolButton_Click" Tag="Circle">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xEA3A;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton Label="Triangle" Click="ToolButton_Click" Tag="Triangle">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE764;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton Label="Polygon" Click="ToolButton_Click" Tag="Polygon">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE81E;"/>
                </AppBarButton.Icon>
            </AppBarButton>

            <AppBarSeparator/>

            <AppBarButton Icon="Undo" Label="Undo" Command="{x:Bind ViewModel.UndoCommand}"/>
            <AppBarButton Icon="Redo" Label="Redo" Command="{x:Bind ViewModel.RedoCommand}"/>

            <AppBarSeparator/>

            <AppBarButton Icon="Delete" Label="Clear" Command="{x:Bind ViewModel.ClearCanvasCommand}"/>
            <AppBarButton Icon="Save" Label="Save" Command="{x:Bind ViewModel.SaveCommand}"/>
        </CommandBar>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,1,1,0"
                Padding="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="24">
                        <TextBlock Text="Shape Properties" Style="{StaticResource SubtitleTextBlockStyle}"/>

                        <StackPanel Spacing="12">
                            <TextBlock Text="Stroke Color" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <GridView
                                ItemsSource="{x:Bind ViewModel.ColorPalette}"
                                SelectionMode="Single"
                                IsItemClickEnabled="True"
                                ItemClick="StrokeColorPicker_ItemClick"
                                MaxHeight="200">
                                <GridView.ItemTemplate>
                                    <DataTemplate x:DataType="Color">
                                        <Border
                                            Width="40"
                                            Height="40"
                                            CornerRadius="4"
                                            BorderThickness="2"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                                            <Border.Background>
                                                <SolidColorBrush Color="{x:Bind Mode=OneWay}"/>
                                            </Border.Background>
                                        </Border>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                            </GridView>
                            <Border
                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                CornerRadius="4"
                                Padding="12,8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Border
                                        Width="24"
                                        Height="24"
                                        CornerRadius="4"
                                        BorderThickness="2"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                                        <Border.Background>
                                            <SolidColorBrush Color="{x:Bind ViewModel.CurrentStrokeColor, Mode=OneWay}"/>
                                        </Border.Background>
                                    </Border>
                                    <TextBlock 
                                        Text="Current Stroke Color" 
                                        VerticalAlignment="Center"
                                        Style="{StaticResource CaptionTextBlockStyle}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <StackPanel Spacing="12">
                            <TextBlock Text="Stroke Thickness" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <Slider
                                Minimum="0.5"
                                Maximum="10"
                                Value="{x:Bind ViewModel.CurrentStrokeThickness, Mode=TwoWay}"
                                StepFrequency="0.5"
                                TickFrequency="1"
                                TickPlacement="BottomRight"/>
                            <TextBlock Style="{StaticResource CaptionTextBlockStyle}">
                                <Run Text="Thickness: "/>
                                <Run Text="{x:Bind ViewModel.CurrentStrokeThickness, Mode=OneWay}"/>
                                <Run Text=" px"/>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Spacing="12">
                            <TextBlock Text="Dash Style" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <ComboBox
                                ItemsSource="{x:Bind ViewModel.DashStyles}"
                                SelectedItem="{x:Bind ViewModel.SelectedDashStyle, Mode=TwoWay}"
                                HorizontalAlignment="Stretch"/>
                            <TextBlock 
                                Text="Line pattern for outlines" 
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>

                        <StackPanel Spacing="12">
                            <TextBlock Text="Fill Color" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <ToggleSwitch
                                Header="Enable Fill"
                                IsOn="{x:Bind ViewModel.IsFillEnabled, Mode=TwoWay}"
                                OnContent="Fill Enabled"
                                OffContent="Fill Disabled"/>
                            <GridView
                                ItemsSource="{x:Bind ViewModel.ColorPalette}"
                                SelectionMode="Single"
                                IsItemClickEnabled="True"
                                ItemClick="FillColorPicker_ItemClick"
                                IsEnabled="{x:Bind ViewModel.IsFillEnabled, Mode=OneWay}"
                                MaxHeight="200">
                                <GridView.ItemTemplate>
                                    <DataTemplate x:DataType="Color">
                                        <Border
                                            Width="40"
                                            Height="40"
                                            CornerRadius="4"
                                            BorderThickness="2"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                                            <Border.Background>
                                                <SolidColorBrush Color="{x:Bind Mode=OneWay}"/>
                                            </Border.Background>
                                        </Border>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                            </GridView>
                            <Border
                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                CornerRadius="4"
                                Padding="12,8"
                                Visibility="{x:Bind ViewModel.IsFillEnabled, Mode=OneWay}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Border
                                        Width="24"
                                        Height="24"
                                        CornerRadius="4"
                                        BorderThickness="2"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        Background="{ThemeResource SystemFillColorAttentionBrush}"/>
                                    <TextBlock 
                                        Text="Current Fill Color" 
                                        VerticalAlignment="Center"
                                        Style="{StaticResource CaptionTextBlockStyle}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <StackPanel Spacing="12">
                            <TextBlock Text="Current Tool" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <Border
                                Background="{ThemeResource AccentFillColorDefaultBrush}"
                                CornerRadius="4"
                                Padding="12,8">
                                <TextBlock Text="{x:Bind ViewModel.SelectedTool, Mode=OneWay}" Foreground="White" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Spacing="12">
                            <TextBlock Text="Default Settings" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <Button
                                Command="{x:Bind ViewModel.SaveAsDefaultCommand}"
                                HorizontalAlignment="Stretch"
                                Style="{StaticResource AccentButtonStyle}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE74E;" FontSize="16"/>
                                    <TextBlock Text="Save as Default"/>
                                </StackPanel>
                            </Button>
                            <TextBlock 
                                Text="Save current stroke, fill, and thickness settings as default for this profile" 
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <Border
                Grid.Column="1"
                Background="White"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0"
                Margin="1,0">
                <Canvas
                    x:Name="DrawingCanvas"
                    Background="White"
                    PointerPressed="Canvas_PointerPressed"
                    PointerMoved="Canvas_PointerMoved"
                    PointerReleased="Canvas_PointerReleased"
                    RightTapped="Canvas_RightTapped"/>
            </Border>

            <Border
                Grid.Column="2"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1,1,0,0"
                Padding="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="24">
                        <TextBlock Text="Selection Properties" Style="{StaticResource SubtitleTextBlockStyle}"/>

                        <StackPanel Spacing="12" Visibility="{x:Bind ViewModel.IsShapeSelected, Mode=OneWay}">
                            <InfoBar
                                IsOpen="True"
                                Severity="Informational"
                                Title="Shape Selected"
                                Message="{x:Bind ViewModel.SelectedShapeInfo, Mode=OneWay}"/>

                            <StackPanel Spacing="8">
                                <TextBlock Text="Position" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <NumberBox Grid.Column="0" Header="X" Margin="0,0,4,0" SpinButtonPlacementMode="Inline"/>
                                    <NumberBox Grid.Column="1" Header="Y" Margin="4,0,0,0" SpinButtonPlacementMode="Inline"/>
                                </Grid>
                            </StackPanel>

                            <StackPanel Spacing="8">
                                <TextBlock Text="Size" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <NumberBox Grid.Column="0" Header="Width" Margin="0,0,4,0" SpinButtonPlacementMode="Inline"/>
                                    <NumberBox Grid.Column="1" Header="Height" Margin="4,0,0,0" SpinButtonPlacementMode="Inline"/>
                                </Grid>
                            </StackPanel>

                            <Button Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                                    <TextBlock Text="Delete"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <StackPanel Spacing="12" Visibility="{x:Bind ViewModel.IsShapeSelected, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                            <InfoBar
                                IsOpen="True"
                                Severity="Informational"
                                Title="No Selection"
                                Message="Click on a shape to see its properties"/>
                        </StackPanel>

                        <StackPanel Spacing="12">
                            <TextBlock Text="Canvas Info" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <StackPanel Spacing="4">
                                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                    <Run Text="Status: "/>
                                    <Run Text="{x:Bind ViewModel.CanvasInfo, Mode=OneWay}"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                    <Run Text="Shapes: "/>
                                    <Run Text="0"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                    <Run Text="Loaded: "/>
                                    <Run Text="{x:Bind ViewModel.IsCanvasLoaded, Mode=OneWay}"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>

                        <!-- Polygon Drawing Status -->
                        <StackPanel Spacing="12" Visibility="{x:Bind ViewModel.IsDrawingPolygon, Mode=OneWay}">
                            <TextBlock Text="Polygon Drawing" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <InfoBar
                                IsOpen="True"
                                Severity="Informational"
                                Title="Drawing in Progress"
                                Message="Click to add points. Click first point or right-click to finish."/>
                            <StackPanel Spacing="4">
                                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                    <Run Text="Points: "/>
                                    <Run Text="{x:Bind ViewModel.PolygonPointCount, Mode=OneWay}"/>
                                </TextBlock>
                                <TextBlock 
                                    Text="• Triangle: 3 points required (auto-complete)"
                                    Style="{StaticResource CaptionTextBlockStyle}" 
                                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                    FontWeight="SemiBold"/>
                                <TextBlock 
                                    Text="• Polygon: Min 3 points, click first point to finish"
                                    Style="{StaticResource CaptionTextBlockStyle}" 
                                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                    FontWeight="SemiBold"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>
