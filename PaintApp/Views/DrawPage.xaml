<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PaintApp.Views.DrawPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PaintApp.Views"
    xmlns:viewmodels="using:PaintApp.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <CommandBar Grid.Row="0" DefaultLabelPosition="Right">
            <AppBarButton 
                Icon="Add" 
                Label="New Canvas" 
                Command="{x:Bind ViewModel.NewCanvasCommand}"
                ToolTipService.ToolTip="Create a new canvas"/>
            
            <AppBarSeparator/>

            <AppBarButton Icon="Edit" Label="Line" Click="ToolButton_Click" Tag="Line"/>
            <AppBarButton Label="Rectangle" Click="ToolButton_Click" Tag="Rectangle">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE739;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton Label="Oval" Click="ToolButton_Click" Tag="Oval">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xF540;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton Label="Circle" Click="ToolButton_Click" Tag="Circle">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xEA3A;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton Label="Triangle" Click="ToolButton_Click" Tag="Triangle">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE764;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton Label="Polygon" Click="ToolButton_Click" Tag="Polygon">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE81E;"/>
                </AppBarButton.Icon>
            </AppBarButton>

            <AppBarSeparator/>

            <AppBarButton Icon="Undo" Label="Undo" Command="{x:Bind ViewModel.UndoCommand}"/>
            <AppBarButton Icon="Redo" Label="Redo" Command="{x:Bind ViewModel.RedoCommand}"/>

            <AppBarSeparator/>

            <AppBarButton Icon="Delete" Label="Clear" Command="{x:Bind ViewModel.ClearCanvasCommand}"/>
            <AppBarButton Icon="Save" Label="Save" Command="{x:Bind ViewModel.SaveCommand}"/>
        </CommandBar>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,1,1,0"
                Padding="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="24">
                        <TextBlock Text="Shape Properties" Style="{StaticResource SubtitleTextBlockStyle}"/>

                        <StackPanel Spacing="12">
                            <TextBlock Text="Stroke Color" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <GridView
                                ItemsSource="{x:Bind ViewModel.ColorPalette}"
                                SelectionMode="Single"
                                IsItemClickEnabled="True"
                                ItemClick="StrokeColorPicker_ItemClick">
                                <GridView.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Width="40"
                                            Height="40"
                                            CornerRadius="4"
                                            BorderThickness="2"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"/>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                            </GridView>
                        </StackPanel>

                        <StackPanel Spacing="12">
                            <TextBlock Text="Fill Color" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <GridView
                                ItemsSource="{x:Bind ViewModel.ColorPalette}"
                                SelectionMode="Single"
                                IsItemClickEnabled="True"
                                ItemClick="FillColorPicker_ItemClick">
                                <GridView.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Width="40"
                                            Height="40"
                                            CornerRadius="4"
                                            BorderThickness="2"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"/>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                            </GridView>
                        </StackPanel>

                        <StackPanel Spacing="12">
                            <TextBlock Text="Stroke Thickness" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <Slider
                                Minimum="1"
                                Maximum="20"
                                Value="{x:Bind ViewModel.StrokeThickness, Mode=TwoWay}"
                                StepFrequency="1"
                                TickFrequency="5"
                                TickPlacement="BottomRight"/>
                            <TextBlock Text="{x:Bind ViewModel.StrokeThickness, Mode=OneWay}" Style="{StaticResource CaptionTextBlockStyle}"/>
                        </StackPanel>

                        <StackPanel Spacing="12">
                            <TextBlock Text="Current Tool" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <Border
                                Background="{ThemeResource AccentFillColorDefaultBrush}"
                                CornerRadius="4"
                                Padding="12,8">
                                <TextBlock Text="{x:Bind ViewModel.SelectedTool, Mode=OneWay}" Foreground="White" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <Border
                Grid.Column="1"
                Background="White"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0"
                Margin="1,0">
                <Canvas
                    x:Name="DrawingCanvas"
                    Background="White"
                    PointerPressed="Canvas_PointerPressed"
                    PointerMoved="Canvas_PointerMoved"
                    PointerReleased="Canvas_PointerReleased"/>
            </Border>

            <Border
                Grid.Column="2"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1,1,0,0"
                Padding="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="24">
                        <TextBlock Text="Selection Properties" Style="{StaticResource SubtitleTextBlockStyle}"/>

                        <StackPanel Spacing="12" Visibility="{x:Bind ViewModel.IsShapeSelected, Mode=OneWay}">
                            <InfoBar
                                IsOpen="True"
                                Severity="Informational"
                                Title="Shape Selected"
                                Message="{x:Bind ViewModel.SelectedShapeInfo, Mode=OneWay}"/>

                            <StackPanel Spacing="8">
                                <TextBlock Text="Position" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <NumberBox Grid.Column="0" Header="X" Margin="0,0,4,0" SpinButtonPlacementMode="Inline"/>
                                    <NumberBox Grid.Column="1" Header="Y" Margin="4,0,0,0" SpinButtonPlacementMode="Inline"/>
                                </Grid>
                            </StackPanel>

                            <StackPanel Spacing="8">
                                <TextBlock Text="Size" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <NumberBox Grid.Column="0" Header="Width" Margin="0,0,4,0" SpinButtonPlacementMode="Inline"/>
                                    <NumberBox Grid.Column="1" Header="Height" Margin="4,0,0,0" SpinButtonPlacementMode="Inline"/>
                                </Grid>
                            </StackPanel>

                            <Button Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                                    <TextBlock Text="Delete"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <StackPanel Spacing="12" Visibility="{x:Bind ViewModel.IsShapeSelected, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                            <InfoBar
                                IsOpen="True"
                                Severity="Informational"
                                Title="No Selection"
                                Message="Click on a shape to see its properties"/>
                        </StackPanel>

                        <StackPanel Spacing="12">
                            <TextBlock Text="Canvas Info" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <StackPanel Spacing="4">
                                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                    <Run Text="Status: "/>
                                    <Run Text="{x:Bind ViewModel.CanvasInfo, Mode=OneWay}"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                    <Run Text="Shapes: "/>
                                    <Run Text="0"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                    <Run Text="Loaded: "/>
                                    <Run Text="{x:Bind ViewModel.IsCanvasLoaded, Mode=OneWay}"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>
